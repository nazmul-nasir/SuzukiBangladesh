<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >



<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#488D8A"


        android:text="Request For Service"
        android:gravity="left"
        android:padding="10dp"

        android:id="@+id/txt_req_for_quotation" />


    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:text="Bike Model"
        android:gravity="center"

        android:background="#d8d8d8"
        android:id="@+id/txt_dropdown" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select Service"
        android:gravity="center"
        android:padding="20dp"

        android:id="@+id/txt_email" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_marginBottom="10dp"
        android:checkedButton="@+id/free"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:orientation="horizontal"


        android:padding="10dp"

        android:id="@+id/rdo_grp_service_type_1" >
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/free"

            android:layout_gravity="left"
            android:text="FREE"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="PAID"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_gravity="right"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WARRANTY"/>

        </RadioGroup>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rdo_grb_service_type_2"
        android:background="@drawable/border"
        android:checkedButton="@+id/repair"
        android:orientation="horizontal">

        <RadioButton
            android:layout_width="match_parent"
            android:layout_weight="1"


            android:layout_height="50dp"
            android:text="PARTS CHANGE"/>

        <RadioButton
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:id="@+id/repair"

            android:layout_height="50dp"
            android:text="REPAIR"/>

    </RadioGroup>
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >
         <CheckBox
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:text="ENGINE"
             android:id="@+id/chk_engine"
             android:layout_marginLeft="20dp"/>
         <CheckBox
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_weight="1"
             android:id="@+id/chk_speedo_motor"
             android:text="SPEEDO MOTOR"
             android:layout_marginRight="20dp"/>

     </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/chk_electrical"
            android:text="ELECTRICAL"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/chk_gear"
            android:text="GEAR"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="SUSPENSION"
            android:id="@+id/chk_suspension"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/chk_clutch_plate"
            android:text="CLUTCH PLATE"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="WHILE/TYRE"
            android:id="@+id/chk_while_tyre"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/chk_oil_filter"
            android:text="OIL FILTER"
            android:layout_marginRight="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="BRAKE"
            android:id="@+id/chk_brake"
            android:layout_marginLeft="20dp"/>
        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/chk_body_parts"
            android:text="BODY PARTS"
            android:layout_marginRight="20dp"/>

    </LinearLayout>




    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_say_something"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/border"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:hint="Say Something..."
        android:singleLine="false"
        android:minLines="5"
       />

    <Button
        android:layout_width="200dp"
        android:layout_height="35dp"
        android:text="Submit"

        android:textColor="#FFFFFF"

        android:layout_below="@+id/btn_submit_service"
        android:id="@+id/btn_service_submit"
        android:layout_marginTop="10dp"
        android:background="#475CCB"
        android:layout_gravity="right"
        android:gravity="center"

        android:layout_alignParentRight="true"
     />



</LinearLayout>
</ScrollView>
